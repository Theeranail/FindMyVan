<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        card_view:cardBackgroundColor="@color/White">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/container_list_food_padding">

            <ImageView
                android:id="@+id/img_search_show"
                android:layout_width="@dimen/img_show_width"
                android:layout_height="@dimen/img_show_height"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="@dimen/img_show_marginRight" />

            <TextView
                android:id="@+id/person_search_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/img_search_show"
                android:text="ร้านมาลองเทส"
                android:textColor="@color/colorfont"
                android:textSize="@dimen/fonsizeM" />

            <TextView
                android:id="@+id/text_search_location"
                android:layout_width="@dimen/widtextAddressmain"
                android:layout_height="wrap_content"
                android:layout_below="@+id/person_search_name"
                android:layout_toRightOf="@+id/img_search_show"
                android:text="ตำแหน่ง:จันทบุรี"
                android:textSize="@dimen/fonsizeN" />



            <TextView
                android:id="@+id/content_search_distane"
                android:layout_width="@dimen/widtextAddressmain"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_search_location"
                android:layout_toRightOf="@+id/img_search_show"
                android:layout_marginTop="@dimen/ontent_distane_marginTop"
                android:gravity="left"
                android:text="ระยะทาง"
                android:textSize="@dimen/ontent_distane_textSize" />


            <ImageView
                android:id="@+id/icon_right_black"
                android:layout_width="@dimen/icon_right_black_width"
                android:layout_height="@dimen/icon_right_black_height"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="-15dp"
                android:paddingLeft="7dp"
                android:paddingBottom="7dp"
                android:paddingTop="7dp"
                android:src="@drawable/ic_map_black_24dp" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
